{
  "name": "@ftask-management/api",
  "version": "1.0.0",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "scripts": {
    "type-check": "tsc --noEmit",
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsc-alias -p tsconfig.build.json",
    "dev": "tsx --watch src/infra/http/server.ts",
    "lint": "eslint --ext .ts src/ test/",
    "lint:fix": "eslint --fix --ext .ts src/ test/",
    "db:migrate:dev": "prisma migrate dev",
    "db:preview": "prisma studio",
    "test": "vitest run -c vitest.config.mts",
    "test:ui": "vitest --ui -c vitest.config.mts",
    "test:watch": "vitest -c vitest.config.mts",
    "test:cov": "vitest run --coverage -c vitest.config.mts"
  },
  "dependencies": {
    "@prisma/client": "5.15.1",
    "bcryptjs": "2.4.3",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-async-errors": "3.1.1",
    "reflect-metadata": "0.2.2",
    "tsyringe": "4.8.0",
    "zod": "3.23.8",
    "zod-validation-error": "3.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@ftask-management/eslint-config": "*",
    "@ftask-management/prettier": "*",
    "@ftask-management/typescript-config": "*",
    "@types/bcryptjs": "2.4.6",
    "@types/express": "4.17.21",
    "@types/node": "20.14.6",
    "@vitest/coverage-v8": "1.6.0",
    "@vitest/ui": "1.6.0",
    "prisma": "5.15.1",
    "tsc-alias": "1.8.10",
    "tsx": "4.16.0",
    "typescript": "5.4.5",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.6.0"
  },
  "prettier": "@ftask-management/prettier",
  "eslintConfig": {
    "extends": [
      "@ftask-management/eslint-config/node.js"
    ],
    "ignorePatterns": [
      "dist",
      "coverage",
      "node_modules"
    ]
  }
}
